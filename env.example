# Example environment variables
# Copy this file to .env.local for local development or set these in Vercel deployment

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Database connection
DATABASE_URL="postgresql://user:password@localhost:5432/cryptostarter?schema=public"

# CryptoProcessing API
CRYPTO_PROCESSING_API_KEY=your_api_key_here
CRYPTO_PROCESSING_STORE_ID=your_store_id_here
PLATFORM_ESCROW_WALLET=your_escrow_wallet_address_here
PLATFORM_WALLET_TYPE=SOL

# NOWPayments
NOW_PAYMENTS_API_KEY="your-nowpayments-api-key"
NOW_PAYMENTS_IPN_SECRET_KEY="your-nowpayments-ipn-secret-key"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000" 